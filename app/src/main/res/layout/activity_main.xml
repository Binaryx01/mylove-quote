<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar"


         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <!-- First Cardview. -->


            <android.support.v7.widget.CardView
                android:id="@+id/love_messages"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="10dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:text="Love Messages" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>




            <!-- 2nd Cardview. -->
            <android.support.v7.widget.CardView
                android:id="@+id/love_poem"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                app:cardBackgroundColor="@android:color/holo_blue_dark"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="10dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lovepoemtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:text="Love Poem" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <!-- Third Cardview. -->


            <android.support.v7.widget.CardView
                android:id="@+id/third"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="420dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="10dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lovequotestxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:text="Love Quotes" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <!-- 4th Cardview. -->


            <android.support.v7.widget.CardView
                android:id="@+id/fourth"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="590dp"
                app:cardBackgroundColor="@android:color/holo_blue_dark"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="10dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lovefactstxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:text="Love Facts" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>














        </RelativeLayout>
    </ScrollView>
</RelativeLayout>